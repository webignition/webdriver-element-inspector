{
    "name": "webignition/webdriver-element-inspector",
    "description": "Convenience methods for getting information from a Facebook\\WebDriver\\WebDriverElement instance",
    "keywords": ["webdriver", "webdriver-element", "inspector"],
    "homepage": "https://github.com/webignition/webdriver-element-inspector",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\WebDriverElementInspector\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\WebDriverElementInspector\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR12",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.4",
        "webignition/web-driver-element-collection": ">=0.8,<1",
        "php-webdriver/webdriver": "^1.8"
    },
    "require-dev": {
        "phpunit/phpunit": "~9",
        "squizlabs/php_codesniffer": "3.*",
        "phpstan/phpstan": "^0.12",
        "symfony/panther": "^0.7",
        "mockery/mockery": "^1.2",
        "phpstan/phpstan-mockery": "^0.12",
        "webignition/symfony-panther-dom-crawler-navigator": ">=0.18,<1",
        "webignition/base-panther-test-case": ">=0.9,<1",
        "phpstan/extension-installer": "^1.0",
        "webignition/php-dom-element-identifier": ">=0.14,<1"
    },
    "config": {
        "sort-packages": true
    }
}
